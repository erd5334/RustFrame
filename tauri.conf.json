{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "RustFrame",
  "version": "1.0.0-windows",
  "identifier": "com.salihcantekin.rustframe",
  "build": {
    "beforeDevCommand": {
      "script": "npm run dev",
      "cwd": "./ui"
    },
    "beforeBuildCommand": {
      "script": "npm run build",
      "cwd": "./ui"
    },
    "devUrl": "http://localhost:1420",
    "frontendDist": "ui/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "app"],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "RustFrame",
        "width": 900,
        "height": 820,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
